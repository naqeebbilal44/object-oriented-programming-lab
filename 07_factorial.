#include <iostream>
using namespace std;

// Function to calculate factorial
int factorial(int n) {
    unsigned long long fact = 1;
    for (int i = 1; i <= n; i++) {
        fact = fact * i; // multiply fact by i each time
    }
    return fact;
}

int main() {
    double num;

    cout << "Enter a number: ";
    cin >> num;

    if (num < 0) {
        cout << "Factorial is not defined for negative numbers." << endl;
    } else {
        unsigned long long result = factorial(num); // call the function
        cout << "The factorial of " << num << " is: " << result << endl;
    }

    return 0;
}
